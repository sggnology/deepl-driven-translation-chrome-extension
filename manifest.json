{
    "name": "한/영 번역기",
    "description": "Korea/English Translation Tool",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}